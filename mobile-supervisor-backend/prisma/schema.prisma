generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Lưu thông tin cố định của mỗi thiết bị
model Device {
  id          String   @id @default(uuid()) // ID duy nhất cho mỗi thiết bị
  userName    String
  phoneNumber String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Quan hệ: Một thiết bị có nhiều bản ghi lịch sử vị trí
  locationHistory LocationHistory[]
}

// Lưu lịch sử vị trí và thông tin mạng theo thời gian
model LocationHistory {
  id        Int      @id @default(autoincrement())
  latitude  Float
  longitude Float
  
  // Thông tin Cell, có thể là null nếu không thu thập được
  cid       Int?
  lac       Int?
  mcc       Int?
  mnc       Int?

  timestamp DateTime @default(now()) // Thời gian bản ghi được tạo

  // Khóa ngoại để liên kết với thiết bị
  deviceId  String
  device    Device   @relation(fields: [deviceId], references: [id])

  @@index([deviceId]) // Đánh index để truy vấn nhanh hơn
}
